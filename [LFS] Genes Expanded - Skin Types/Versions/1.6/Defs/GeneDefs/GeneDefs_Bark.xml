<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<GeneDef>
		<defName>GEST_Bark_Skin_Type</defName>
		<label>Bark Skin</label>
		<labelShortAdj>Bark Skin</labelShortAdj>
		<description>Carriers of this gene develop a thick, bark-like hide that spreads across their body. The rough, ridged surface resembles the trunk of an ancient tree, offering strong resistance to sharp damage while giving them a rugged, natural appearance.</description>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
		<displayCategory>GEST_Skin_type</displayCategory>
		<displayOrderInCategory>400</displayOrderInCategory>
		<iconPath>UI/Icon/Genes/Bark_Icon</iconPath>
		<iconColor>(1, 1, 1)</iconColor>
		<exclusionTags>
			<li>Skin</li>
			<li>Fur</li>
		</exclusionTags>
		<fur>GEST_Bark_Skin_Type</fur>
		<skinIsHairColor>false</skinIsHairColor>
		<tattoosVisible>true</tattoosVisible>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_Fur</nodeClass>
				<workerClass>PawnRenderNodeWorker_Fur</workerClass>
				<baseLayer>5</baseLayer>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<colorType>Skin</colorType>
				<parentTagDef>Body</parentTagDef>
			</li>
		</renderNodeProperties>
		<statOffsets>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
			<Beauty>3</Beauty>
			<MoveSpeed>-0.1</MoveSpeed>
		</statOffsets>
		<missingGeneRomanceChanceFactor>0.2</missingGeneRomanceChanceFactor>
	
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<useSkinColorForFur>True</useSkinColorForFur>
			</li>
		</modExtensions>
	</GeneDef>

	<FurDef>
		<defName>GEST_Bark_Skin_Type</defName>
		<noGraphic>true</noGraphic>
		<bodyTypeGraphicPaths>
			<Male>Pawn/Bark/Bark_Male</Male>
			<Female>Pawn/Bark/Bark_Female</Female>
			<Hulk>Pawn/Bark/Bark_Hulk</Hulk>
			<Fat>Pawn/Bark/Bark_Fat</Fat>
			<Thin>Pawn/Bark/Bark_Thin</Thin>
			<Child>Pawn/Bark/Bark_Child</Child>
			<Baby>Things/Pawn/Humanlike/Bodies/Naked_Child</Baby> <!-- Always covered by swaddled graphic -->
		</bodyTypeGraphicPaths>
	</FurDef>

</Defs>
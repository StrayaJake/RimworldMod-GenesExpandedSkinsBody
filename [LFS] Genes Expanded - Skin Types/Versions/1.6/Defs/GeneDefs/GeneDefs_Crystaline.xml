<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<GeneDef>
		<defName>GEST_Crystalline_Skin_Type</defName>
		<label>Crystalline Skin</label>
		<labelShortAdj>Crystalline Skin</labelShortAdj>
		<description>Carriers of this gene develop crystalline plates threaded with glowing crystal veins across their body. This mutation, caused by a unique virus, makes portions of their skin shimmer brilliantly while providing strong protection against sharp damage.</description>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
		<displayCategory>GEST_Skin_type</displayCategory>
		<displayOrderInCategory>400</displayOrderInCategory>
		<iconPath>UI/Icon/Genes/Crystalline_Icon</iconPath>
		<iconColor>(1, 1, 1)</iconColor>
		<exclusionTags>
			<li>Skin</li>
			<li>Fur</li>
		</exclusionTags>
		<fur>GEST_Crystalline_Skin_Type</fur>
		<skinIsHairColor>false</skinIsHairColor>
		<tattoosVisible>true</tattoosVisible>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_Fur</nodeClass>
				<workerClass>PawnRenderNodeWorker_Fur</workerClass>
				<baseLayer>5</baseLayer>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<colorType>Skin</colorType>
				<parentTagDef>Body</parentTagDef>
			</li>
		</renderNodeProperties>
		<statOffsets>
			<ArmorRating_Sharp>0.3</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
			<Beauty>3</Beauty>
			<MoveSpeed>-0.1</MoveSpeed>
		</statOffsets>
		<missingGeneRomanceChanceFactor>0.2</missingGeneRomanceChanceFactor>
		
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<useSkinColorForFur>True</useSkinColorForFur>
			</li>
		</modExtensions>
	</GeneDef>

	<FurDef>
		<defName>GEST_Crystalline_Skin_Type</defName>
		<noGraphic>true</noGraphic>
		<bodyTypeGraphicPaths>
			<Male>Pawn/Crystalline/Crystalline_Male</Male>
			<Female>Pawn/Crystalline/Crystalline_Female</Female>
			<Hulk>Pawn/Crystalline/Crystalline_Hulk</Hulk>
			<Fat>Pawn/Crystalline/Crystalline_Fat</Fat>
			<Thin>Pawn/Crystalline/Crystalline_Thin</Thin>
			<Child>Pawn/Crystalline/Crystalline_Child</Child>
			<Baby>Things/Pawn/Humanlike/Bodies/Naked_Child</Baby> <!-- Always covered by swaddled graphic -->
		</bodyTypeGraphicPaths>
	</FurDef>

</Defs>
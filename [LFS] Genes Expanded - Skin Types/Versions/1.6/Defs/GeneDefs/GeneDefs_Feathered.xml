<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<GeneDef>
		<defName>GEB_Feathered_Skin_Type</defName>
		<label>Feathered Skin</label>
		<labelShortAdj>Feathered Skin</labelShortAdj>
		<description>Carriers of this gene grow feathers all over their body, providing insulation and a unique appearance.</description>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
		<displayCategory>Miscellaneous</displayCategory>
		<displayOrderInCategory>400</displayOrderInCategory>
		<iconPath>UI/Icon/Genes/Feathered_Icon</iconPath>
		<iconColor>(1, 1, 1)</iconColor>
		<exclusionTags>
			<li>Skin</li>
			<li>Fur</li>
		</exclusionTags>
		<fur>GEB_Feathered_Skin_Type</fur>
		<skinIsHairColor>false</skinIsHairColor>
		<tattoosVisible>true</tattoosVisible>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_Fur</nodeClass>
				<workerClass>PawnRenderNodeWorker_Fur</workerClass>
				<baseLayer>5</baseLayer>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<colorType>Skin</colorType>
				<parentTagDef>Body</parentTagDef>
			</li>
		</renderNodeProperties>
		<statOffsets>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
		</statOffsets>
		<missingGeneRomanceChanceFactor>0.2</missingGeneRomanceChanceFactor>
		
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<useSkinColorForFur>True</useSkinColorForFur>
			</li>
		</modExtensions>
	</GeneDef>

	<FurDef>
		<defName>GEB_Feathered_Skin_Type</defName>
		<noGraphic>true</noGraphic>
		<bodyTypeGraphicPaths>
			<Male>Pawn/Feathered/Feathered_Male</Male>
			<Female>Pawn/Feathered/Feathered_Female</Female>
			<Hulk>Pawn/Feathered/Feathered_Hulk</Hulk>
			<Fat>Pawn/Feathered/Feathered_Fat</Fat>
			<Thin>Pawn/Feathered/Feathered_Thin</Thin>
			<Child>Pawn/Feathered/Feathered_Child</Child>
			<Baby>Things/Pawn/Humanlike/Bodies/Naked_Child</Baby> <!-- Always covered by swaddled graphic -->
		</bodyTypeGraphicPaths>
	</FurDef>

</Defs>
<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<GeneDef>
		<defName>GEST_Insectoid_Skin_Type</defName>
		<label>Insectoid Skin</label>
		<labelShortAdj>Insectoid Skin</labelShortAdj>
		<description>Carriers of this gene grow a hardened, insectoid exoskeleton over much of their body. The chitinous plates, ridged and segmented like those of giant insects, grant formidable protection from sharp damage while giving their appearance an unmistakably alien edge.</description>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
		<displayCategory>GEST_Skin_type</displayCategory>
		<displayOrderInCategory>400</displayOrderInCategory>
		<iconPath>UI/Icon/Genes/Insectoid_Icon</iconPath>
		<iconColor>(1, 1, 1)</iconColor>
		<exclusionTags>
			<li>Skin</li>
			<li>Fur</li>
		</exclusionTags>
		<fur>GEST_Insectoid_Skin_Type</fur>
		<skinIsHairColor>false</skinIsHairColor>
		<tattoosVisible>true</tattoosVisible>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_Fur</nodeClass>
				<workerClass>PawnRenderNodeWorker_Fur</workerClass>
				<baseLayer>5</baseLayer>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<colorType>Skin</colorType>
				<parentTagDef>Body</parentTagDef>
			</li>
		</renderNodeProperties>
		<statOffsets>
			<ArmorRating_Sharp>0.4</ArmorRating_Sharp>
			<Beauty>-3</Beauty>
			<MoveSpeed>-0.1</MoveSpeed>
		</statOffsets>
		<missingGeneRomanceChanceFactor>0.2</missingGeneRomanceChanceFactor>
		
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<useSkinColorForFur>True</useSkinColorForFur>
			</li>
		</modExtensions>
	</GeneDef>

	<FurDef>
		<defName>GEST_Insectoid_Skin_Type</defName>
		<noGraphic>true</noGraphic>
		<bodyTypeGraphicPaths>
			<Male>Pawn/Insectoid/Insectoid_Male</Male>
			<Female>Pawn/Insectoid/Insectoid_Female</Female>
			<Hulk>Pawn/Insectoid/Insectoid_Hulk</Hulk>
			<Fat>Pawn/Insectoid/Insectoid_Fat</Fat>
			<Thin>Pawn/Insectoid/Insectoid_Thin</Thin>
			<Child>Pawn/Insectoid/Insectoid_Child</Child>
			<Baby>Things/Pawn/Humanlike/Bodies/Naked_Child</Baby> <!-- Always covered by swaddled graphic -->
		</bodyTypeGraphicPaths>
	</FurDef>

</Defs>
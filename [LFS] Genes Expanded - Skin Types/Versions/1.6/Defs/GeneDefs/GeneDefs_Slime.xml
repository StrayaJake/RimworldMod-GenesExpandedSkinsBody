<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<GeneDef>
		<defName>GEST_Slime_Skin_Type</defName>
		<label>Slime Skin</label>
		<labelShortAdj>Slime Skin</labelShortAdj>
		<description>Carriers of this gene have a slimy, gelatinous skin that provides unique benefits and drawbacks.</description>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
		<displayCategory>GEST_Skin_type</displayCategory>
		<displayOrderInCategory>400</displayOrderInCategory>
		<iconPath>UI/Icon/Genes/Slime_Icon</iconPath>
		<iconColor>(1, 1, 1)</iconColor>
		<exclusionTags>
			<li>Skin</li>
			<li>Fur</li>
		</exclusionTags>
		<fur>GEST_Slime_Skin_Type</fur>
		<skinIsHairColor>false</skinIsHairColor>
		<tattoosVisible>true</tattoosVisible>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_Fur</nodeClass>
				<workerClass>PawnRenderNodeWorker_Fur</workerClass>
				<baseLayer>5</baseLayer>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<colorType>Skin</colorType>
				<parentTagDef>Body</parentTagDef>
			</li>
		</renderNodeProperties>
		<statOffsets>
			<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Heat>0.2</ArmorRating_Heat>
			<MoveSpeed>-0.2</MoveSpeed>
		</statOffsets>
		<missingGeneRomanceChanceFactor>0.2</missingGeneRomanceChanceFactor>
		
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<useSkinColorForFur>True</useSkinColorForFur>
			</li>
		</modExtensions>
	</GeneDef>

	<FurDef>
		<defName>GEST_Slime_Skin_Type</defName>
		<noGraphic>true</noGraphic>
		<bodyTypeGraphicPaths>
			<Male>Pawn/Slime/Slime_Male</Male>
			<Female>Pawn/Slime/Slime_Female</Female>
			<Hulk>Pawn/Slime/Slime_Hulk</Hulk>
			<Fat>Pawn/Slime/Slime_Fat</Fat>
			<Thin>Pawn/Slime/Slime_Thin</Thin>
			<Child>Pawn/Slime/Slime_Child</Child>
			<Baby>Things/Pawn/Humanlike/Bodies/Naked_Child</Baby> <!-- Always covered by swaddled graphic -->
		</bodyTypeGraphicPaths>
	</FurDef>

</Defs>